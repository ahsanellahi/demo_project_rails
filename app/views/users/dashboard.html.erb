<div class="page-header">
  <h1><%= @user.email %></h1>
</div>
<div>
  <h2><span class="label label-primary">Products</span></h2>
  <%= render '/products/user_products', products: @products %>
</div>
<div>
  <% if is_owner_and_signed_in? @user %>
    <h2><span class="label label-primary">Reviews</span></h2>
    <%= render '/reviews/user_reviews', reviews: @reviews %>
  <% end %>
</div>
