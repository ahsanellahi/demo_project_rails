<h1>Listing products</h1>

<%= paginate @products %>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.body %></td>
    <td><%= product.price %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) if is_owner_and_signed_in?(@owner) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } if is_owner_and_signed_in?(@owner) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path if user_signed_in? %>
