<div class="page-header">
  <h1>All Products
    <% if user_signed_in? %>
      <%= link_to new_product_path, class: "btn btn-primary active right", type: 'button' do %>
        <i class="fa fa-plus-circle"></i>
        New Product
      <% end %>
    <% end %>
    <div id="search-bar" class="input-group pull-right">
      <%= form_tag(products_path, method: :get, class: 'input-group pull-right') do %>
        <%= text_field_tag(:query, nil, required: true, class: 'form-control', placeholder: 'Search..') %>
        <span class="input-group-btn">
          <%= submit_tag('Search!', class: "btn btn-primary") %>
        </span>
      <% end %>
    </div>
  </h1>
</div>

<div id="index-products">
  <%= render 'products', products: @products %>
</div>
