<div class="row">
  <div class="page-header"><h1>All Products</h1></div>
</div>

<div class='row'>
  <%= paginate @products %>
</div>

<div class="row">
  <div class="">
    <% @products.each do |product| %>
      <div class="thumbnail">
        <%= image_tag("default-image.png") %>
        <div class="caption">
          <h4><%= product.title %></h4>
          <h6>$<%= product.price %></h6>
          <p>Blah Blah Blah</p>
          <p>
            <%= link_to "View", product_path(product), class: "btn btn-primary" %>
            <%= link_to "Order", product_path(product), class: "btn btn-default" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.body %></td>
    <td><%= product.price %></td>
    <td><%= link_to 'Show', product %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path if user_signed_in? %>
