<div class="page-header">
  <h1>Checkout</h1>
</div>
<%= hidden_field_tag 'client_token', @client_token %>
<%= form_tag transactions_path do%>
  <h6>Please authenticate your <strong><i>PayPal</i></strong> details</h6>
  <div id="dropin"></div>
  <%= submit_tag "Pay (#{number_to_currency(current_order[:total])})", class: 'btn btn-lg btn-success' %>
<% end %>
