<div class="page-header">
  <h1>New Transaction</h1>
</div>
<%= hidden_field_tag 'client_token', @client_token %>
<%= form_tag transactions_path do%>
  <h6>Please enter your payment details:</h6>
  <div id="dropin"></div>
  <%= submit_tag "Pay ($#{current_order[:total]} USD)", class: 'btn btn-lg btn-success' %>
<% end %>
