<!DOCTYPE html>
<html>
<head>
  <title>DemoProject</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script src="https://js.braintreegateway.com/v2/braintree.js"></script>
</head>
<body>

  <nav class="navbar navbar-default" id="header-bar">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="<%= root_path %>">Demo Project</a>
      </div>
      <div>
        <ul class="nav navbar-nav">
          <li class="active"><a href="<%= root_path %>">Home</a></li>
          <li><a href="#">Contact</a></li>
          <li><a href="#">About</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li class="cart-text"><%= render 'layouts/cart_text' %></li>
          <% unless user_signed_in? %>
            <li><%= link_to "Sign In", new_user_session_path, class: "glyphicon glyphicon-log-in" %></li>
            <li><%= link_to "Register", new_user_registration_path, class: "glyphicon glyphicon-user" %></li>
          <% else %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <%= user_full_name(current_user) %><span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><a href="<%= users_dashboard_path %>">Dashboard</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="<%= edit_user_registration_path %>">Edit Profile</a></li>
              </ul>
            </li>
            <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-in" %></li>
          <% end %>

        </ul>
      </div>
    </div>
  </nav>


  <div class="container">
    <div id='notice'>
      <%= render 'layouts/flash', flash: flash %>
    </div>
    <%= yield %>
  </div>

</body>
</html>
