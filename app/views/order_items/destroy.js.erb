$(".cart-text").html("<%= escape_javascript(render 'layouts/cart_text') %>");
$("#total-price").html("<%= escape_javascript(render 'carts/total_price') %>");
$(".shopping-cart").html("<%= escape_javascript(render 'carts/shopping_cart', current_order: current_order) %>");
$("#notice").html("<%= escape_javascript(render 'layouts/flash', flash: flash).html_safe %>");
if ('<%= current_order_has_products? %>' == '') {
  $('#checkout-container').hide();
} else {
  $('#checkout-container').show();
}
